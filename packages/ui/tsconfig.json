{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/App.tsx", "src/main.tsx"]
}
