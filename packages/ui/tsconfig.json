{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["DOM", "ESNext"],
		"sourceMap": true,
		"noEmit": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["@rspack/core/module"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"transpileOnly": true
	}
}
